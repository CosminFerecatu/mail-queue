# Docker Compose Environment Variables
# Copy this file to .env and adjust values as needed

# PostgreSQL
POSTGRES_USER=mailqueue
POSTGRES_PASSWORD=mailqueue
POSTGRES_DB=mailqueue

# Redis
REDIS_PASSWORD=

# pgAdmin (optional tools profile)
PGADMIN_DEFAULT_EMAIL=admin@mailqueue.local
PGADMIN_DEFAULT_PASSWORD=admin

# ============================================================================
# Observability (optional monitoring profile)
# ============================================================================

# OpenTelemetry - Set to enable tracing (when using monitoring profile)
# OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4318
# OTEL_TRACING_ENABLED=true
# OTEL_DEBUG=false

# Grafana
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin

# Logging
LOG_LEVEL=info
