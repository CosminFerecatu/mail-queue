# ===========================================
# Mail Queue - Environment Configuration
# ===========================================

# Node environment
NODE_ENV=development

# ===========================================
# Database (PostgreSQL)
# ===========================================
DATABASE_URL=postgresql://mailqueue:mailqueue@localhost:5432/mailqueue

# ===========================================
# Redis
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# API Service
# ===========================================
API_PORT=3000
API_HOST=0.0.0.0

# Admin secret for initial setup (change in production!)
ADMIN_SECRET=change-me-in-production

# ===========================================
# Security
# ===========================================
# 32-byte hex string for AES-256 encryption
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# JWT secret for dashboard authentication
JWT_SECRET=change-me-jwt-secret-in-production

# JWT expiration
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# ===========================================
# SMTP (for development - MailHog)
# ===========================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# ===========================================
# Dashboard
# ===========================================
DASHBOARD_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3000

# NextAuth v5 secret (required for JWT encryption)
# Generate with: openssl rand -base64 32
AUTH_SECRET=

# ===========================================
# Tracking Service
# ===========================================
TRACKING_URL=http://localhost:3002

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=debug

# ===========================================
# Rate Limiting
# ===========================================
# Global rate limit (requests per minute)
GLOBAL_RATE_LIMIT=10000

# ===========================================
# Worker
# ===========================================
# Number of concurrent email jobs per worker
WORKER_CONCURRENCY=10
